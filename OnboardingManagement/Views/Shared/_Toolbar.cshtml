<div>
    @(Html.Kendo().ToolBar()
                      .Name("ToolBar")
                     .Items(items =>
                     {
                         items.Add().Type(CommandType.Separator);
                         items.Add().Type(CommandType.SplitButton).Text("Mentor").Id("MentorButton").Click("MentorHandler").MenuButtons(menuButtons =>
                         {
                             menuButtons.Add().Text("View Mentor").Id("m_view");
                             menuButtons.Add().Text("Add Mentor").Id("m_add");
                             menuButtons.Add().Text("Update Mentor").Id("m_update");
                             menuButtons.Add().Text("Delete Mentor").Id("m_delete");

                         });

                         items.Add().Type(CommandType.Separator);
                         items.Add().Type(CommandType.Separator);

                         items.Add().Type(CommandType.Button).Text("OnBoarder").Id("OnBoarder").Click("OnBoarderHandler");

                         items.Add().Type(CommandType.Separator);
                         items.Add().Type(CommandType.Separator);
                         items.Add().Type(CommandType.SplitButton).Text("Project").Id("ProjectButton").Click("ProjectHandler").MenuButtons(menuButtons =>
                         {
                             menuButtons.Add().Text("View Project").Id("p_view");
                             menuButtons.Add().Text("Add Project").Id("p_add");
                             menuButtons.Add().Text("Update Project").Id("p_update");
                             menuButtons.Add().Text("Delete Project").Id("p_delete");

                         });

                         items.Add().Type(CommandType.Separator);
                         items.Add().Type(CommandType.Separator);
                         items.Add().Type(CommandType.SplitButton).Text("Project Assigned").Id("Project_AButton").Click("P_AssignHandler").MenuButtons(menuButtons =>
                         {
                             menuButtons.Add().Text("View").Id("pa_view");
                             menuButtons.Add().Text("Assign Project").Id("pa_add");
                             menuButtons.Add().Text("Delete Assigned Project").Id("pa_delete");

                         });
                     })
    )

</div>

<script>
    function MentorHandler(e)
    {
        if (e.id == "m_add")
        {
            var url = '@Url.Action("testView","Admin")';
            window.location.href = url;

        }
        else if (e.id == "m_view")
        {
            var url = '@Url.Action("MView","Admin")';
            window.location.href = url;
        }

        else if (e.id == "m_update") {
            var url = '@Url.Action("MView","Admin")';
            window.location.href = url;
        }
        else if (e.id == "m_delete") {
            alert("Mentor: " + e.id + "is clicked");
        }
        else
        {
            alert("ERROR");
        }
    }


    function OnBoarderHandler(e) {
        if (e.id == "OnBoarder") {
            var url = '@Url.Action("Index","Onboarder")';
            window.location.href = url;

       }
        
    }

    function ProjectHandler(e) {
        if (e.id == "p_add") {

            window.location.href = "/Project/Create";

        }
        else if (e.id == "p_view") {
             window.location.href = "/Project/Index";
        }

        else if (e.id == "p_update") {
            window.location.href = "/Project/Update";
        }
        else if (e.id == "p_delete") {
            window.location.href = "/Project/Delete";
        }
        else {
            alert("ERROR");
        }
    }

    function P_AssignHandler(e) {
        if (e.id == "pa_add") {
            var url = '@Url.Action("Create", "ProjectAssignment")';
            window.location.href = url;
          //  alert("ProjectAssigned: " + e.id + "is clicked");

        }
        else if (e.id == "pa_view") {
            var url = '@Url.Action("Index", "ProjectAssignment")';
            window.location.href = url;
        }


        else if (e.id == "pa_delete") {
            var url = '@Url.Action("Delete", "ProjectAssignment")';
            window.location.href = url;
        }
        else {
            alert("ERROR");
        }
    }
</script>

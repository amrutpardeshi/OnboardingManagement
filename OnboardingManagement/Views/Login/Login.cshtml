@model OnboardingManagement.Models.User
@{
    ViewBag.Title = "Login";
}





@using (Html.BeginForm("Login", "Login", FormMethod.Post, new { ReturnUrl = Request["ReturnUrl"] }))
            {
      <center>
     <div class="form-group">
        <h3 style="color:darkblue ;font-style:oblique"> Login</h3><br />
        <div class="col-lg-6 col-lg-offset-3" style="background-color:lemonchiffon ; border:groove;">
            <div class="row">
                <div class="col-lg-3">
                    <br /><br /><br /><br />
                    @Html.Label("Username")
                </div>
                <div class="col-lg-3">
                    <br /><br /><br /><br />
                   @Html.Kendo().TextBoxFor(m => @Model.U_Name)
                </div>
                </div>
            <div class="row">
                <div class="col-lg-3">
                    <br/>
                    @Html.Label("Password")
                </div>
                <div class="col-lg-3">
                    <br />
                    @Html.Kendo().TextBoxFor(m => @Model.U_Password).HtmlAttributes(new { type = "password" })
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3">
                  
                </div>
                <input type="hidden" name="ReturnUrl" value="@Request.QueryString["ReturnUrl"]" />
                <div class="col-lg-3">
                    <br />
                    <button class="btn btn-lg btn-primary" type="submit">Login</button>
              
                </div>
           
            </div><br /> 
     </div></div></center>
}







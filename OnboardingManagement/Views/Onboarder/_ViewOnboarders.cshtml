@model OnboardingManagement.Models.Onboarder


@(Html.Kendo().Grid<OnboardingManagement.Models.Onboarder>()
    .Name("grid")
    .Columns(columns =>
    {
        columns.Bound(p => p.O_Id).Filterable(false);
        columns.Bound(p => p.O_Name);
        columns.Bound(p => p.O_Rotation_Num);
        columns.Bound(p => p.RM_Id);
    })
    .Pageable()
    .Sortable()
    .Scrollable()
    .Filterable()
    .HtmlAttributes(new { style = "height:550px;" })
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)
        .Read(read => read.Action("Remote_Binding_Orders_Read", "Grid"))
     )
)
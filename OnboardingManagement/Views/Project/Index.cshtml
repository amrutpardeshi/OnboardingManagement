<div>@Html.Partial("_HeadNavBar")</div>
<div>@Html.Partial("_Toolbar")</div>




@(Html.Kendo().Grid<OnboardingManagement.Models.Project>()
      .Name("grid")
      .Columns(columns =>
      {
          columns.Bound(c => c.P_Name);
          columns.Bound(c => c.P_Technology);
          columns.Command(command => { command.Destroy(); }).Width(180);
         
      })
      .Scrollable()
      .Pageable()
      .DataSource(dataSource => dataSource
          .Ajax()
           .Model(model => model.Id(p => p.P_Id))
          .Read(read => read.Action("Projects_Read", "Project"))
           .Destroy(destroy => destroy.Action("Projects_Destroy", "Project"))

      )
     
     
)


